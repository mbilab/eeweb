@import 'nib'

// nib

global-reset()

// global style

html
  height 100%
  width 100%

body
  background #000 url('https://paper.dropbox.com/ep/redirect/image?url=https%3A%2F%2Fd2mxuefqeaa7sj.cloudfront.net%2Fs_0240BE9257158DB5A90BC0DCE9F805C0C2C9027CF7B256EE40205B8A73AB71E3_1492744868318_body_background.jpg&hmac=v6HH44vwuKIhH6BYxaNk%2BZuBARyAgjse2dnP49xKB%2Bs%3D')  no-repeat
  background-size 100% 100%
  margin 0

 .page
  box-sizing border-box
  height 100%
  opacity 0
  position absolute
  padding 8.5% 6% 4% 3.5%
  top 0
  transition opacity 0.6s
  width 100%

  >div
    float left
    height 100%
    position relative
    width 67%

    &:first-child
      margin-right 0.5%
      padding-top 0
      width 32%

      &>div
        height 70%
        position relative
        width 100%

      &>span
        color rgba(92, 86, 92, 0.47)
        float right
        font-family 'mon'
        font-size 12.5rem
        font-weight 900
        position relative

  &>span

    &:first-child
      color rgba(92, 86, 92, 0.47)
      font-family 'mon'
      font-size 12.5rem
      font-weight 900
      position absolute
      top 75% 
  
.pointer
  cursor pointer
  
// panel

.box
  border 12px solid rgba(92, 86 ,92 ,0.47)
  height 10.5rem
  left 24%
  position absolute
  top 9%
  width 18.5rem

.intro
  color #bdb2c3
  float left
  font-family 'mon'
  font-size 1rem
  left 8%
  line-height 1.625rem
  position relative
  top 27%
  transition opacity 0.6s
  width 62%
  z-index 1

.letter
  color #fff
  display inline-block
  font-family 'mon'
  font-size 3.7rem
  font-weight 700
  margin-left 8%
  margin-bottom 4%
  position relative
  top 14%
  transition opacity 0.6s
  z-index 1

  &.indent
    white-space pre
  
#logo
  background-color #e2db1a
  color white
  cursor pointer
  float left
  font-family 'Cabin',sans-serif
  font-size 3rem
  padding 0.6875rem 1.6rem
  position relative

#menu
  display inline
  left 20%
  position relative
  top 1.78rem

  &>li
    border-bottom-color rgba(226, 219, 26, 0)
    color #fff
    cursor pointer
    display inline
    font-family 'mon'
    font-size medium
    margin-left 4rem
    padding-bottom 1.5%
    transition all ease-in-out 0.3s

    &:first-child
      margin-left 0!important
      margin-right 0

    &:hover
      border-bottom 2.5px solid rgba(226, 219, 26, 1)
      padding-bottom 0

.nav
  left 2%
  position fixed
  top 4%
  width 93%
  z-index 4 

.panel
  background rgba(68, 63, 70, 0.9)
  float left
  height 100%
  position absolute
  transition all ease-in-out 0.5s
  width 100%
  
// landing page

body[data-content="landing"]
  #landing
    opacity 1
  .panel
    width 43%

#landing
  
  &>span
    color rgba(92, 86, 92, 0.47)
    float right
    font-family 'mon'
    font-size 12.5rem
    font-weight 900
    position relative
    right 57%
    top 75%

.qutoe
  color #fff
  font-family 'mon'
  font-size 2rem
  font-weight 100
  height auto!important
  left 20%
  position absolute!important
  text-shadow 2px 2px 10px #000
  top calc( 50% - 49.72px)
  width 67%
  z-index 2   
// activity page

body[data-content="activity"]
  #activity
    display block
    opacity 1

.board[data-content="title"]
  .outline
    opacity 1
  .detail
    pointer-events none

  &:hover .style-1::-webkit-scrollbar-thumb
    background-color #e2db1a

  & .redo
    opacity 0
    
.board[data-content="content"]
  .outline
    pointer-events none
  .detail
    opacity 1
    
  &:hover .style-1::webkit-scrollbar-thumb
    background-color rgba(122, 122, 122, 0.65)

.blank
  cursor pointer
  font-family 'mon'
  line-height 1.625rem
  margin 5% 0%
  overflow hidden
  position relative
  text-align left
  width 95%
  z-index 3

.blank_detail
  height 4.875rem

.board
  background url('https://paper.dropbox.com/ep/redirect/image?url=https%3A%2F%2Fd2mxuefqeaa7sj.cloudfront.net%2Fs_0240BE9257158DB5A90BC0DCE9F805C0C2C9027CF7B256EE40205B8A73AB71E3_1492744874277_board_background.png&hmac=9oihZpnWCJFyTa09Q8xMc%2F5Hl4%2BYJ8aaTsqLoy2KXso%3D') no-repeat
  background-color #fff
  background-size 100% 100%
  box-sizing border-box
  height 93%
  padding 8% 3% 8% 3%
  position relative
  width 100%
  z-index 1
  
.detail
  font-family 'mon'
  height 108%
  left 1%
  line-height 2.5rem
  opacity 0
  overflow-x hidden
  overflow-y auto
  position relative
  text-align left
  top -108%
  transition opacity 0.6s
  width 94%

  &>p
    line-height 2.5rem
    white-space pre-line

    &:first-child
      display inline-block
      font-size 2rem
      line-height 0; 
      margin-bottom 10%

.detail_pic
  height 20%
  margin-top 1.25rem
  position relative
  width 100%

  >img
    height 100%
    margin 0 1%

    &:first-child
      margin-left 0
      
.outline
  height 100%
  opacity 0
  overflow-x hidden
  overflow-y auto 
  position relative
  transition opacity 0.6s
  width 100%

  &>div
    float left
    margin 0 3%
    margin-bottom 5%
    position relative
    width 44%

.record
  line-height 1rem
  position relative
  right 2%
  text-align right
  top 5%

.redo
  cursor pointer
  font-size 1.3rem
  right 1%
  opacity 0.6
  position absolute
  bottom 1%
  transition all 0.6s
  z-index 5

  &>img
    width 50px
    
// lab page

body[data-content="lab"]
  #lab
    display block
    opacity 1

    .lab_board

      &[data-status="member"]

        & #group
          opacity 0
          pointer-events none

        & #member
          opacity 1

      &[data-status="group"]

        & #member
          pointer-events none
    
#group
  align-items center 
  flex-wrap wrap
  height 100%
  justify-content center
  opacity 1
  overflow-y auto 
  position relative
  transition opacity 0.6s ease-in-out
  width 100%
            
.group
  color #000
  font-family 'mon_bold'
  font-size 2rem
  text-align center

  &>span
    display block
    position relative
    top 50%
    transform translateY(-50%)

.lab_board
  background transparent
  height 100%
  padding 2% 13%

  &:hover .style-1::-webkit-scrollbar-thumb
    background-color #e2db1a 

#member
  height 100%
  opacity 0
  overflow-y auto
  position relative
  top -100%
  transition opacity 0.6s ease-in-out
  width 100%

.member
  align-items center 
  background transparent
  flex-wrap wrap
  float left
  height 12.5rem
  margin 1% 1%
  cursor pointer
  position relative
  width 12.5rem

  >img
    height 100%
    width 100%
    
// font

@font-face 
  font-family mon
  src url('res/font/Montserrat-Light.otf') 

@font-face
  font-family mon_bold
  src url('res/font/Montserrat-Regular.otf')
  
// color

.bc-white 
  background-color rgba(255, 255, 255, 0.6)
    
.yellow
  color #e2db1a

// size
  
.small
  font-size 1.5rem

// scroll bar
.style-1

  &::-webkit-scrllbar-track
    border-radius 10px
    background-color transparent

  &::-webkit-scrollbar
    width 4px
    background-color transparent

  &::-webkit-scrollbar-thumb
    border-radius 10px
    background-color transparent
      
